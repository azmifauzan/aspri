# Database Configuration
POSTGRES_DB=aspri
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8080

# JWT Configuration (WAJIB! Generate strong random secret minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=PLEASE_GENERATE_RANDOM_SECRET_USE_OPENSSL_RAND_BASE64_32
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost

# Frontend Configuration
FRONTEND_PORT=80

# Spring AI Configuration (Optional - uncomment sesuai provider yang digunakan)
# SPRING_AI_OPENAI_API_KEY=your-openai-api-key
# SPRING_AI_OPENAI_MODEL=gpt-4
# SPRING_AI_ANTHROPIC_API_KEY=your-anthropic-api-key
# SPRING_AI_ANTHROPIC_MODEL=claude-3-sonnet

# Telegram Bot Configuration (Optional)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_BOT_USERNAME=your-bot-username

