# Environment Variables Template for ASPRI Backend
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=mysql+aiomysql://username:password@localhost:3306/aspri_db

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google AI Configuration (for LangChain GenAI embeddings)
GOOGLE_API_KEY=your-google-ai-api-key-here

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_NAME=documents

# ChromaDB Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=document_embeddings

# Application Configuration
DEBUG=true
ENVIRONMENT=development