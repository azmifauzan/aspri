# Database Configuration
# For production, use your own PostgreSQL server or Supabase (without auth dependency)
DATABASE_URL=jdbc:postgresql://localhost:5432/aspri
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password

# JWT Configuration (MUST CHANGE IN PRODUCTION!)
# Generate secure key: openssl rand -base64 64
JWT_SECRET=your-secure-jwt-secret-key-minimum-32-characters-for-production-use-only
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Server Configuration
SERVER_PORT=8080

# JPA Configuration (optional)
JPA_SHOW_SQL=false
